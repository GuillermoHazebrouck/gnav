package Utility.Events is

   --+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   --
   --+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   type Callback_Type is access procedure;

   --+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   --
   --+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   type Event_Stack is tagged private;

   --===========================================================================
   -- Connects a callback to the event
   --===========================================================================
   procedure Connect (This : in out Event_Stack; Callback : Callback_Type);

   --===========================================================================
   -- Triggers the event by calling all connected callbacks
   --===========================================================================
   procedure Trigger (This : Event_Stack);

private

   --+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   --
   --+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   type Event_Array is array (1..10) of access procedure;

   --+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   --
   --+++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
   type Event_Stack is tagged record

      Callbacks : Event_Array;

   end record;

end Utility.Events;
