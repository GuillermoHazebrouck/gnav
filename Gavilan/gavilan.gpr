project Gavilan is

   for Languages use ("Ada");
   for Source_Dirs use ("src/**");
   for Object_Dir use "obj";
   for Main use ("gavilan.adb");

   package Linker is

      --------------------------------------------------------------------------
      -- Link OpenGL and GLFW
      --------------------------------------------------------------------------
      for Default_Switches ("Ada") use ("-lGL", "-lglfw");

   end Linker;

end Gavilan;
